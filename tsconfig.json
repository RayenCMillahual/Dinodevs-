{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",                     // Puedes dejar esto o cambiarlo según tus necesidades
    "module": "commonjs",                   // Puedes dejar esto o cambiarlo según tus necesidades
    "jsx": "react-native",                   // Asegúrate de que esta línea esté presente
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
